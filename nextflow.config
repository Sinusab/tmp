// Global pipeline parameters
params {
    // Default output directory for all results.
    // You can override this at runtime:
    //   nextflow run main.nf --outdir my_results
    outdir     = 'results'

    // Path to the R script that runs PureCN (or your ASCNA caller).
    // This is relative to the project root.
    run_purecn = 'scripts/run_purecn.R'
}

// Default settings for all processes (unless overridden per-process)
process {
    // Type of executor / scheduler.
    // Use 'slurm' on SLURM clusters, 'sge' on Sun Grid Engine,
    // 'pbs' or 'lsf' for those systems, or 'local' on a single machine.
    executor = 'slurm'

    // Number of CPUs (threads) requested per process.
    // This is what Nextflow will request from the scheduler.
    cpus     = 4

    // Amount of memory requested per process.
    // You can use units like '8 GB', '32 GB', etc.
    memory   = '32 GB'
}
