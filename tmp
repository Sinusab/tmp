URL_HTTPS="https://hgdownload.soe.ucsc.edu/goldenPath/hg38/database/refGene.txt.gz"
URL_FTP="ftp://hgdownload.soe.ucsc.edu/goldenPath/hg38/database/refGene.txt.gz"

echo "Trying HTTPS with wget..."
wget -q --show-progress "$URL_HTTPS" -O refGene_hg38.txt.gz || \
{
  echo "wget HTTPS failed. Trying curl HTTPS..."
  curl -L --fail "$URL_HTTPS" -o refGene_hg38.txt.gz || \
  {
    echo "HTTPS failed. Trying FTP..."
    wget -q --show-progress "$URL_FTP" -O refGene_hg38.txt.gz || \
    {
      echo "All download methods failed."
      exit 1
    }
  }
}

echo "Download completed."
ls -lh refGene_hg38.txt.gz
